<mujoco model="low_cost_robot scene">
  <!-- The timestep has a big influence on the contacts stability -->
  <compiler angle="radian" meshdir="assets/" texturedir="assets/"/>

  <option timestep="0.001" impratio="10" cone="elliptic"/>

  <visual>
    <global azimuth="140" elevation="-30"/>
    <headlight ambient="0.3 0.3 0.3" diffuse="0.6 0.6 0.6" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
  </visual>

  <statistic extent="0.6" center="0 0 0.1"/>

  <default>
    <default class="low_cost_robot">
      <general biastype="affine"/>
      <default class="joint1">
        <joint range="-3.14158 3.14158" damping="0.1"/>
        <general ctrlrange="-3.14158 3.14158" gainprm="25" biasprm="0 -25"/>
      </default>
      <default class="joint2">
        <joint range="-3.14158 3.14158" damping="0.1"/>
        <general ctrlrange="-3.14158 3.14158" gainprm="25" biasprm="0 -25"/>
      </default>
      <default class="joint3">
        <joint range="-3.14158 3.14158" damping="0.1"/>
        <general ctrlrange="-3.14158 3.14158" gainprm="25" biasprm="0 -25"/>
      </default>
      <default class="joint4">
        <joint range="-3.14158 3.14158" damping="0.1"/>
        <general ctrlrange="-3.14158 3.14158" gainprm="25" biasprm="0 -25"/>
      </default>
      <default class="joint5">
        <joint range="-2.45 0.032" damping="0.1"/>
        <general ctrlrange="-2.45 0.032" gainprm="25" biasprm="0 -25"/>
      </default>
    </default>
  </default>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    <mesh name="base_link" file="base_link.stl" scale="0.001 0.001 0.001"/>
    <mesh name="first-bracket-motor_1" file="first-bracket-motor_1.stl" scale="0.001 0.001 0.001"/>
    <mesh name="shoulder-to-elbow-motor_v1_1" file="shoulder-to-elbow-motor_v1_1.stl" scale="0.001 0.001 0.001"/>
    <mesh name="elbow-to-wrist-motor-reference_v1_1" file="elbow-to-wrist-motor-reference_v1_1.stl" scale="0.001 0.001 0.001"/>
    <mesh name="gripper-static-motor-pt1" file="gripper-static-motor-pt1.stl" scale="0.001 0.001 0.001"/>
    <mesh name="gripper-static-motor-pt2" file="gripper-static-motor-pt2.stl" scale="0.001 0.001 0.001"/>
    <mesh name="gripper-moving-part-dumb_v2_1" file="gripper-moving-part-dumb_v2_1.stl" scale="0.001 0.001 0.001"/>
  </asset>

  <worldbody>
    <geom name="floor" size="0 0 0.05" type="plane" friction="0.1" material="groundplane"/>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <body name="base_link">
      <geom name="base_link" type="mesh" rgba="0.1 0.1 0.1 1" mesh="base_link"/>
      <body name="joint1">
        <joint name="joint1" class="joint1" pos="0.00025 0.06875 0.0409" axis="0 0 1"/>
        <geom name="joint1" type="mesh" rgba="0.1 0.1 0.1 1" mesh="first-bracket-motor_1"/>
        <body name="joint2">
          <joint name="joint2" class="joint2" pos="0.01945 0.06895 0.05515" axis="1 0 0"/>
          <geom name="joint2" type="mesh" rgba="0.1 0.1 0.1 1" mesh="shoulder-to-elbow-motor_v1_1"/>
          <body name="joint3">
            <joint name="joint3" class="joint3" pos="-0.0143 0.08375 0.16345" axis="1 0 0"/>
            <geom name="joint3" type="mesh" rgba="0.1 0.1 0.1 1" mesh="elbow-to-wrist-motor-reference_v1_1"/>
            <body name="joint4">
              <joint name="joint4" class="joint4" pos="-0.000893 0.128688 0.163437" axis="0 -1 0"/>
              <geom name="joint4-pt1" type="mesh" rgba="0.1 0.1 0.1 1" mesh="gripper-static-motor-pt1"/>
              <geom name="joint4" type="mesh" contype="0" conaffinity="0" rgba="0.1 0.1 0.1 1" mesh="gripper-static-motor-pt2"/>
              <body name="joint4-pad">
                <geom name="static_finger_pad" size="0.006 0.006 0.006" pos="0.0135 0.192 0.1635" type="box" priority="1" friction="0.7" solref="0.004" solimp="0.95 0.99" mass="0.01" rgba="0 0 0 0"/>
              </body>
              <body name="joint5">
                <joint name="joint5" class="joint5" pos="-0.008443 0.141678 0.177687" axis="0 0 -1"/>
                <geom name="joint5" type="mesh" contype="0" conaffinity="0" rgba="0.1 0.1 0.1 1" mesh="gripper-moving-part-dumb_v2_1"/>
                <body name="joint5-pad">
                  <geom name="moving_finger_pad" size="0.006 0.006 0.006" pos="-0.0007 0.192 0.1635" quat="0.988771 0 0 -0.149438" type="box" priority="1" friction="0.7" solref="0.004" solimp="0.95 0.99" mass="0.01" rgba="0 0 0 0"/>
                </body>
              </body>
              <body>
                <geom name="end_effector" size="0.001" pos="-0.005 0.1935 0.1635" contype="0" conaffinity="0" rgba="0 0 0 0"/>
              </body>
            </body>
          </body>
        </body>
      </body>
    </body>
    <body name="box" pos="0 0.2 0.01">
      <inertial pos="0 0 0" mass="0.1" diaginertia="0.00016667 0.00016667 0.00016667"/>
      <joint name="red_box_joint" type="free" limited="false" actuatorfrclimited="false"/>
      <geom name="red_box" size="0.015 0.015 0.015" type="box" priority="1" friction="0.5" rgba="0.5 0 0 1"/>
    </body>
  </worldbody>

  <actuator>
    <general name="joint1" class="joint1" joint="joint1"/>
    <general name="joint2" class="joint2" joint="joint2"/>
    <general name="joint3" class="joint3" joint="joint3"/>
    <general name="joint4" class="joint4" joint="joint4"/>
    <general name="joint5" class="joint5" joint="joint5"/>
  </actuator>
</mujoco>
